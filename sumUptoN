#include <iostream>
using namespace std;

int sumToN(int n) {
    if (n < 0) {
        cout << "Error: Negative input not allowed." << endl;
        return 0;
    }
    if (n <= 1)
        return 1;
    return n + sumToN(n - 1);
}

int main() {
    int number;
    cout << "Enter a number: ";
    cin >> number;

    int total = sumToN(number);
    if (number >= 0)
        cout << "Sum from 1 to " << number << " is " << total << endl;

    return 0;
}
